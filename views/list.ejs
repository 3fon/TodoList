<%- include("header") -%>

<div class="box" id="heading">
    <h1><%= listTitle %></h1>
</div>

<div class="box">

    <% newListItem.forEach((item) => {%>
    <form action="/delete" method="post">
        <div class="item">
            <input type="checkbox" name="checkedItem" value="<%=item.id%>" onchange="this.form.submit()">
            <p> <%= item.name %> </p>
        </div>
    </form>
    <% }) %>




<form class="item" action="<%= whichList %>" method="post">
    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
    <button type="submit" name="list" value=<% listTitle %>>+</button>
</form>
</div>


<%- include("footer") -%>

